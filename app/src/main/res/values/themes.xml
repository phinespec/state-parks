<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StateParks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mauve_taupe</item>
        <item name="colorPrimaryVariant">@color/mauve_taupe</item>
        <item name="colorOnPrimary">@color/desert_sand</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/middle_blue_green</item>
        <item name="colorSecondaryVariant">@color/soft_blue</item>
        <item name="colorOnSecondary">@color/mauve_taupe</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StateParks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StateParks.AppOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.StateParks.PopupOverlay" parent="Theme.AppCompat.Light"/>
</resources>