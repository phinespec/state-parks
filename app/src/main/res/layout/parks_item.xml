<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="park"
            type="com.example.stateparks.data.Park" />

        <variable
            name="clickListener"
            type="com.example.stateparks.adapters.ParkListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/gunlock"
        android:onClick="@{() -> clickListener.onClick(park)}"
        app:cardBackgroundColor="@color/teal_700"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:id="@+id/rl_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/gunlock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/iv_image"
                android:layout_alignBottom="@id/iv_image"
                android:layout_toEndOf="@id/iv_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/park_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@{park.parkName}"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/park_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@{park.remarks}"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/map_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Click to view map"
                    android:textColor="@color/purple_500"
                    android:textColorLink="@color/common_google_signin_btn_text_light_default"
                    android:textSize="10sp" />


            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
